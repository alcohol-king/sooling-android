<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBeer</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="colorControlActivated">@android:color/black</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@color/colorBeer</item>
        <item name="android:textColorHighlight">@color/colorBeer</item>
    </style>

    <style name="AppTheme.TextFloatLabelAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/colorDarkerGray</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="ShareDialogTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/colorDialog</item>
    </style>
</resources>
