<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.login.LoginActivity">

    <TextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:lineSpacingExtra="2dp"
        android:text="건강한 음주문화를 위한 \n신개념 주량명함"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/main_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/logo_img"
        android:scaleType="fitCenter" />


    <ImageView
        android:layout_width="203dp"
        android:layout_height="326dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/main_hand_illust_img" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="54dp"
        android:layout_marginBottom="53dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_real_login"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:adjustViewBounds="true"
            android:background="@drawable/oval_login_logo_background"
            android:padding="15dp"
            android:src="@drawable/kakao_login_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="카카오톡으로 \n가입하기"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>


    <com.kakao.usermgmt.LoginButton
        android:id="@+id/btn_kakao_login"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="550dp"
        android:visibility="gone" />


</RelativeLayout>